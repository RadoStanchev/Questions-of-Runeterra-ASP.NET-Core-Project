                        <label>
                            <input asp-for="Answers" type="radio" name="1" value="Russia" /> <label asp-for="Answers">Russia</label>
                        </label>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-between align-items-center p-3 bg-white">
