@model AnswerQueryModel
@{
    var orderNumber = int.Parse(TempData["orderNumber"].ToString());
    TempData.Keep("orderNumber");
}

<h4 class="text-center">@ViewBag.Title</h4>
<form class="offset-1 col-10" id="form" method="post">
    <div class="form-row">
        <div class="form-group text-center">
            <label class="form-control">Current Answer @(orderNumber+1)</label>
        </div>
        <div class="form-group text-center">
            <label class="form-control">Total Answers @Model.TotalAnswers</label>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label class="form-control-plaintext">Answer</label>
        </div>
        <div class="form-group offset-1 col-md-2">
            <label class="form-control-plaintext">Is True</label>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <input asp-for="@Model.CurrentAnswer.Content" name="Content" type="text" class="form-control answerInput" placeholder="Write your Answer here">
        </div>
        <div class="form-group offset-1 col-md-2">
            <label>
                <input asp-for="@Model.CurrentAnswer.IsRight" class="form-control" type="checkbox" name="IsRight" value="true">
            </label>
        </div>
        <input asp-for="@Model.CurrentAnswer.QuestionId" name="QuestionId" type="text" value="@Model.QuestionId" hidden>
        <input asp-for="@Model.CurrentAnswer.Id" name="Id" type="text" value="@(Model.CurrentAnswer == null ? null : Model.CurrentAnswer.Id)" hidden>
    </div>
    <div class="form-row">
        <div class="form-group d-flex flex-row justify-content-between align-items-center p-3 bg-white">
            <a asp-action="@nameof(AnswersController.Edit)"
               asp-controller="Answers"
               asp-route-questionId="@Model.QuestionId"
               asp-route-IncreaseOrderNumber ="false"
               class="btn btn-primary d-flex align-items-center btn-danger form-control @(Model.PreviousAnswer == null ? "disabled" : string.Empty)">
                <span class="carousel-control-prev-icon"></span>
                Previous Answer
            </a>
            <a class="form-control" asp-action="@nameof(QuestionsController.Edit)" asp-controller="Questions" asp-route-Id="@Model.QuestionId">
                Edit the Question
            </a>

            <a class="form-control" asp-action="@nameof(QuestionsController.Save)" asp-controller="Questions" asp-route-Id="@Model.QuestionId">
                Save Question
            </a>


            <button asp-route-IncreaseOrderNumber ="true" type="submit" class="btn btn-primary d-flex align-items-center btn-success form-control">
                @if (@Model.TotalAnswers == orderNumber)
                {
                    <span>Add some more Answers</span>
                }
                else
                {
                    <span>Edit Next Answer</span>
                }
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
</form>